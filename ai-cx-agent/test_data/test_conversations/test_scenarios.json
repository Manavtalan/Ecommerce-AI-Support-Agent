{
  "scenarios": [
    {
      "scenario_id": "TEST-001",
      "scenario_name": "Happy Path - Order Status",
      "brand_id": "brand_fashionhub_001",
      "description": "Customer checks order status, gets information, satisfied with response",
      "difficulty": "easy",
      "expected_behavior": "Agent provides status, tracking, ETA without asking for clarification. Remembers context in follow-up.",
      "success_criteria": {
        "context_retention": true,
        "provides_tracking": true,
        "provides_eta": true,
        "no_repetition": true,
        "friendly_tone": true
      },
      "conversation": [
        {
          "turn": 1,
          "speaker": "user",
          "message": "Hi, where is my order 12345?",
          "expected_intent": "order_status",
          "expected_emotion": "neutral"
        },
        {
          "turn": 2,
          "speaker": "assistant",
          "expected_actions": [
            "lookup_order_12345",
            "detect_emotion_neutral",
            "compose_response_with_order_details"
          ],
          "must_include": ["status", "courier", "tracking"],
          "must_not_include": ["which order", "order number"]
        },
        {
          "turn": 3,
          "speaker": "user",
          "message": "When will it arrive?",
          "expected_intent": "order_status_followup",
          "expected_emotion": "neutral"
        },
        {
          "turn": 4,
          "speaker": "assistant",
          "expected_context_retention": true,
          "must_remember": "order_12345",
          "must_include": ["estimated_delivery", "date"],
          "must_not_include": ["which order", "order number", "12345 again"]
        },
        {
          "turn": 5,
          "speaker": "user",
          "message": "Great, thanks!",
          "expected_emotion": "positive"
        },
        {
          "turn": 6,
          "speaker": "assistant",
          "expected_emotion_detected": "positive",
          "should_close_warmly": true
        }
      ]
    },
    {
      "scenario_id": "TEST-002",
      "scenario_name": "Frustrated Customer - Delayed Order",
      "brand_id": "brand_fashionhub_001",
      "description": "Customer is angry about delayed order, needs empathy and explanation",
      "difficulty": "hard",
      "expected_behavior": "Agent detects frustration, shows empathy FIRST, then explains delay with specifics, offers solution",
      "success_criteria": {
        "emotion_detection": "frustrated",
        "empathy_shown": true,
        "explains_delay": true,
        "context_retention": true,
        "de_escalation": true
      },
      "conversation": [
        {
          "turn": 1,
          "speaker": "user",
          "message": "My order 12348 is LATE! This is ridiculous!",
          "expected_intent": "order_status",
          "expected_emotion": "frustrated",
          "emotion_intensity": 8
        },
        {
          "turn": 2,
          "speaker": "assistant",
          "expected_emotion_detected": "frustrated",
          "must_include_first": "empathy",
          "required_elements": ["empathy_statement", "order_details", "delay_reason"],
          "empathy_examples": ["understand", "frustrating", "hear you"],
          "must_not_be": "robotic"
        },
        {
          "turn": 3,
          "speaker": "user",
          "message": "Why is it taking so long???",
          "expected_emotion": "frustrated",
          "expected_intent": "order_status_followup"
        },
        {
          "turn": 4,
          "speaker": "assistant",
          "expected_context_retention": true,
          "must_remember": "order_12348",
          "should_explain": "specific_delay_reason",
          "must_include": ["weather", "Delhi", "fog"],
          "should_provide": "revised_eta",
          "tone": "calm_and_empathetic"
        },
        {
          "turn": 5,
          "speaker": "user",
          "message": "This is the last time I order from you",
          "expected_emotion": "very_frustrated"
        },
        {
          "turn": 6,
          "speaker": "assistant",
          "expected_escalation": false,
          "should_deescalate": true,
          "must_not": "argue",
          "should_show": "commitment_to_fix",
          "acceptable_escalation": false
        }
      ]
    },
